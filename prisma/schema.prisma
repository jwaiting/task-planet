datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id            Int      @id @default(autoincrement())
  description   String
  mood          Json
  suggestedTime Int
  createdAt     DateTime @default(now())
}

enum TaskStatus {
  pending
  approved
  rejected
}

model TaskSuggestionBuffer {
  id            Int        @id @default(autoincrement())
  description   String
  mood          Json
  suggestedTime Int
  status        TaskStatus @default(pending)
  votes         Int        @default(0)
  createdAt     DateTime   @default(now())
}